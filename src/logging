#!/bin/bash
# -*- coding: utf-8 -*-

###############################################################################
# Logging module
###############################################################################
#
# Defines useful logging functions
#
# Functions:
#   - echo_info
#   - echo_warn
#   - echo_err
#
###############################################################################


echo_info()
{
    # Print information level logging message to stderr
    #
    # Arguments:
    #   - message

    if [[ $# == 0 ]]; then
        echo "$(date -Is) INFO" >&2
    else
        echo "$(date -Is) INFO $@" >&2
    fi
    return 0
}


echo_warn()
{
    # Print warning level logging message to stderr
    #
    # Arguments:
    #   - message

    if [[ $# == 0 ]]; then
        echo "$(date -Is) WARNING" >&2
    else
        echo "$(date -Is) WARNING $@" >&2
    fi
    return 0
}


echo_err()
{
    # Print error level logging message to stderr
    #
    # Arguments:
    #   - message

    if [[ $# == 0 ]]; then
        echo "$(date -Is) ERROR" >&2
    else
        echo "$(date -Is) ERROR $@" >&2
    fi
    return 0
}


